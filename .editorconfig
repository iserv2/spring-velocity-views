# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
insert_final_newline = false

[pom.xml]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace=true

[*.sql]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace=true

[*.py]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace=true

[*.{java,scala,vm,less}]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace=true